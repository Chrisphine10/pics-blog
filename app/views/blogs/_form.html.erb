<div class="container">
  <div class="flex-row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5 rounded-0">
        <div class="card-body">
          <%= form_for @blog do |f| %>
          <div class="form-group">
            <%= f.label "Add Picture" %>
          <%= f.file_field :picture, class: 'form-control', style: 'padding:100px' %>
          </div>

          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :content %>
              <%= f.text_area :content, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.select :category_id, Category.all.map { |e| [e.category, e.id] }%>
            </div>
            <div class="form-group">
            <%= f.submit class: 'btn btn-outline-primary' %>
            <%= link_to "Back", blogs_path, class: 'btn btn-outline-secondary' %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
