<div class="container">
  <div class="flex-row d-flex justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
            <%= image_tag("default.jpg", class: "card-img-top", alt: "Card image cap") %>
            <div class="card-body">
              <h4>Category: <%= @blog.category.category %></h4>
              <h5 class="card-title"><%= @blog.title %></h5>
            </div>
            <div class="list m-auto">
              <%= link_to "Edit", edit_blog_path(@blog.id), class: 'btn btn-outline-primary' %>
              <%= link_to "Delete", blog_path(@blog.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'  %>
              <%= link_to "Back", blogs_path, class: 'btn btn-secondary' %>
            </div>
</div>
</div>
<div class="col-md-8">
  <div class="card mt-5">
      <div class="card-body">
  <p class="card-text"><%= @blog.content %></p>
  </div>
  </div>
</div>
</div>
  </div>
