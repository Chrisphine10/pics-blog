
<style media="screen">
  ::-webkit-scrollbar {
    width: 20px;
}

/* Track */
::-webkit-scrollbar-track {
    display: hidden;
}



/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    display: hidden;
}
</style>
<nav class="navbar navbar-expand-lg navbar-light">
  <span class="nav mb-4">Categories</span>
  <ul class="list-inline navbar-brand" style="overflow-x:scroll; margin-bottom: 10px;">
      <% @categories.each do |category| %>
      <li class="list-inline-item">
        <%= link_to category.category, blogs_path(:cate => category.id), style: 'margin: 10px;font-size: 16px;color: grey;text-decoration:none' %>
      </li>
      <% end %>
  </ul>
</nav>
<div class="test" style="margin-left: 2%;margin-right: 2%;">
  <div class="row">

    <div class="col-lg-12">
      <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-md-6 col-sm-12 col-lg-4">

          <div class="mt-3">

                  <span class="badge badge-secondary">Views: 12</span>

              <div data-toggle="modal" data-target="#mynewpost">
            <%= image_tag("test3.jpg", alt: "Card image cap", style: 'height:auto;width:100%;', ondoubleclick: '') %>
              </div>

              <div class="modal fade" id="mynewpost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden>

                <div class="modal-dialog">
                     <div class="modal-content">
                         <div class="modal-body">
                           <div class="container" style="height: 600px;">
                             <div class="row">
                               <div class="col-md-4">
                                 <div class="dialog">
                                   <%= image_tag("test3.jpg", alt: "Card image cap", class: 'img-responsive', style: 'height:auto;width:100%;') %>
                                 </div>
                               </div>
                               <div class="col-md-8">
                                 <div class="dialog">
                                   <%= image_tag("test3.jpg", alt: "Card image cap", class: 'img-responsive', style: 'height:auto;width:100%;') %>
                                 </div>
                               </div>
                             </div>
                           </div>

                        </div>
                        </div>
                  </div>
              </div>
          </div>

        </div>
       <% end %>
      </div>
    </div>
  </div>

</div>
